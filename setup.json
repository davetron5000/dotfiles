{
  "setup" : [
    {
      "name": "Alfred",
      "type": "manual",
      "url": "https://www.alfredapp.com"
    },
    {
      "name": "Docker",
      "type": "manual",
      "url": "https://store.docker.com/editions/community/docker-ce-desktop-mac"
    },
    {
      "name": "XCode Command-line",
      "type": "shell",
      "command": "xcode-select --install",
      "test": "gcc --help"
    },
    {
      "name": "Homebrew",
      "type": "shell",
      "command": "/usr/bin/ruby -e \"$(curl -fsSL https://raw.githubusercontent.com/Homebrew/install/master/install)\"",
      "test": "brew help"
    },
    {
      "name": "nodejs",
      "type": "homebrew",
      "package": "node"
    },
    {
      "name": "yarn",
      "type": "homebrew",
      "package": "yarn"
    },
    {
      "name": "git",
      "type": "homebrew",
      "package": "git"
    },
    {
      "name": "global git ignore",
      "type": "shell",
      "command": "git config --global core.excludesfile ~/.gitignore",
      "test": "ls `git config --global core.excludesfile`"
    },
    {
      "name": "Heroku Brew Tap",
      "type": "shell",
      "command": "brew tap heroku/brew",
      "test": "brew tap | grep heroku"
    },
    {
      "name": "Heroku Toolbelt",
      "type": "homebrew",
      "package": "heroku"
    },
    {
      "name": "Homebrew Cask",
      "type": "shell",
      "command": "brew tap homebrew/cask",
      "test": "brew tap | grep homebrew/cask"
    },
    {
      "name": "Log in to Heroku",
      "type": "manual",
      "instructions": [
        "In another window, type:",
        "",
        "heroku login",
        "",
        "Follow the instructions to log into Heroku"
      ]
    },
    {
      "name": "coreutils",
      "type": "homebrew",
      "package": "coreutils"
    },
    {
      "name": "gpg",
      "type": "homebrew",
      "package": "gpg"
    },
    {
      "name": "Vim",
      "type": "homebrew",
      "package": "vim"
    },
    {
      "name": "Vim Packages",
      "type": "manual",
      "instructions": [
        "do update_packages in your vim yo"
      ]
    },
    {
      "name": "Terraform",
      "type": "homebrew",
      "package": "terraform"
    },
    {
      "name": "Clone Solarized Terminal Themes",
      "type": "shell",
      "command": "cd ~/Projects/Personal && git clone https://github.com/tomislav/osx-terminal.app-colors-solarized.git",
      "test": "ls ~/Projects/Personal/osx-terminal.app-colors-solarized"
    },
    {
      "name": "Solarized Terminal Themes",
      "type": "manual",
      "instructions": [
        "Open up your terminal and install the themes",
        "They have been cloned into ~/Projects/Personal"
      ]
    },
    {
      "name": "Source Code Pro Font",
      "type": "manual",
      "url": "https://www.fontsquirrel.com/fonts/source-code-pro"
    },
    {
      "name": "monofur Font",
      "type": "manual",
      "url": "https://www.dafont.com/monofur.font"
    },
    {
      "name": "tig",
      "type": "homebrew",
      "package": "tig"
    },
    {
      "name": "Graphviz",
      "type": "homebrew",
      "package": "graphviz"
    },
    {
      "name": "direnv",
      "type": "homebrew",
      "package": "direnv"
    },
    {
      "name": "ag",
      "type": "homebrew",
      "package": "the_silver_searcher"
    },
    {
      "name": "AWS CLI",
      "type": "homebrew",
      "package": "awscli"
    },
    {
      "name": "aspell",
      "type": "homebrew",
      "package": "aspell"
    },
    {
      "name": "entr",
      "type": "homebrew",
      "package": "entr"
    },
    {
      "name": "exiftool",
      "type": "homebrew",
      "package": "exiftool"
    },
    {
      "name": "imagemagick",
      "type": "homebrew",
      "package": "imagemagick"
    },
    {
      "name": "exa",
      "type": "homebrew",
      "package": "exa"
    },
    {
      "name": "AWS Brew Tap",
      "type": "shell",
      "command": "brew tap aws/tap",
      "test": "brew tap | grep aws"
    },
    {
      "name": "bat",
      "type": "homebrew",
      "package": "bat"
    },
    {
      "name": "fswatch",
      "type": "homebrew",
      "package": "fswatch"
    },
    {
      "name": "tree",
      "type": "homebrew",
      "package": "tree"
    },
    {
      "name": "GitHub CLI",
      "type": "homebrew",
      "package": "gh"
    },
    {
      "name": "ruby-install",
      "type": "homebrew",
      "package": "ruby-install"
    },
    {
      "name": "jq",
      "type": "homebrew",
      "package": "jq"
    },
    {
      "name": "fsevents",
      "type": "homebrew",
      "package": "fsevents"
    }
  ]
}
