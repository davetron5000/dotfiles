{
  "setup" : [
    {
      "name": "Alfred",
      "type": "manual",
      "url": "https://www.alfredapp.com"
    },
    {
      "name": "Docker",
      "type": "manual",
      "url": "https://store.docker.com/editions/community/docker-ce-desktop-mac"
    },
    {
      "name": "Fantastical",
      "type": "manual",
      "url": "https://flexibits.com/fantastical"
    },
    {
      "name": "XCode Command-line",
      "type": "shell",
      "command": "xcode-select --install",
      "test": "gcc --help"
    },
    {
      "name": "Homebrew",
      "type": "shell",
      "command": "/bin/bash -c \"$(curl -fsSL https://raw.githubusercontent.com/Homebrew/install/HEAD/install.sh)\"",
      "test": "brew help"
    },
    {
      "name": "git",
      "type": "homebrew",
      "package": "git"
    },
    {
      "name": "Heroku Brew Tap",
      "type": "shell",
      "command": "brew tap heroku/brew",
      "test": "brew tap | grep heroku"
    },
    {
      "name": "Heroku Toolbelt",
      "type": "homebrew",
      "package": "heroku"
    },
    {
      "name": "NeoVim",
      "type": "homebrew",
      "package": "neovim"
    },
    {
      "name": "Vim Packages",
      "type": "manual",
      "instructions": [
        "do update_packages in your vim yo"
      ]
    },
    {
      "name": "Terraform",
      "type": "homebrew",
      "package": "terraform"
    },
    {
      "name": "Subversion",
      "type": "homebrew",
      "package": "subversion"
    },
    {
      "name": "Clone Solarized Terminal Themes",
      "type": "shell",
      "command": "cd ~/Projects/Personal && git clone https://github.com/tomislav/osx-terminal.app-colors-solarized.git",
      "test": "ls ~/Projects/Personal/osx-terminal.app-colors-solarized.git"
    },
    {
      "name": "Solarized Terminal Themes",
      "type": "manual",
      "instructions": [
        "Open up your terminal and install the themes",
        "They have been cloned into ~/Projects/Personal"
      ]
    },
    {
      "name": "Source Code Pro Font",
      "type": "manual",
      "url": "https://www.fontsquirrel.com/fonts/source-code-pro"
    },
    {
      "name": "monofur Font",
      "type": "manual",
      "url": "https://www.dafont.com/monofur.font"
    },
    {
      "name": "tig",
      "type": "homebrew",
      "package": "tig"
    },
    {
      "name": "Graphviz",
      "type": "homebrew",
      "package": "graphviz"
    },
    {
      "name": "direnv",
      "type": "homebrew",
      "package": "direnv"
    },
    {
      "name": "ag",
      "type": "homebrew",
      "package": "the_silver_searcher"
    },
    {
      "name": "AWS CLI",
      "type": "homebrew",
      "package": "awscli"
    },
    {
      "name": "exiftool",
      "type": "homebrew",
      "package": "exiftool"
    },
    {
      "name": "imagemagick",
      "type": "homebrew",
      "package": "imagemagick"
    },
    {
      "name": "exa",
      "type": "homebrew",
      "package": "exa"
    },
    {
      "name": "bat",
      "type": "homebrew",
      "package": "bat"
    },
    {
      "name": "monaspace fonts",
      "type": "manual",
      "url": "https://github.com/githubnext/monaspace#monaspace"
    },
    {
      "name": "VimR",
      "type": "manual",
      "url": "https://github.com/qvacua/vimr/releases"
    },
    {
      "name": "git-lfs",
      "type": "homebrew",
      "package": "git-lfs"
    },
    {
      "name": "npm",
      "type": "homebrew",
      "package": "npm"
    },
    {
      "name": "tree",
      "type": "homebrew",
      "package": "tree"
    }
  ]
}
