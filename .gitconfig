[user]
	name = Dave Copeland
	email = davec@naildrivin5.com
[core]
	excludesfile = /Users/davec/.gitignore
[color]
  branch = auto
  diff = auto
  status = auto
[color "branch"]
  current = green reverse
  local = green
  remote = yellow
[color "diff"]
  meta = yellow
  frag = magenta bold
  old = red bold
  new = green bold
[color "status"]
  added = yellow bold
  changed = red bold
  untracked = cyan
[alias]
  lol = log --oneline --graph --decorate
  update = pull --rebase
  up = pull --rebase
  oldest-ancestor = !bash -c 'diff -u <(git rev-list --first-parent "${1:-master}") <(git rev-list --first-parent "${2:-HEAD}") | sed -ne \"s/^ //p\" | head -1' -
[rerere]
  enabled = 0
[mergetool]
	keepBackup = true
[github]
	user = davetron5000
[filter "media"]
	clean = git-media-clean %f
	smudge = git-media-smudge %f
[push]
	default = simple
