set -o vi
shopt -s cdspell
shopt -s histappend
if [ -t 0 ] ; then
    stty erase 
fi
export FIGNORE=~:.bak:.tmp:.swp
export HISTCONTROL=ignoredups
export LANG=en_US.UTF-8
export PATH=${HOME}/bin:${HOME}/apps/bin:${HOME}/apps/neovim/bin:/usr/local/bin:${PATH}:${HOME}/bin:/usr/texbin
export EDITOR=nvim
